<div class="overflow-hidden min-h-screen relative">
  <!-- Sección para desktop -->
  <div class="hidden lg:block px-12">
    <h1
      class="text-5xl text-center text-miyo-primary leading-relaxed mx-auto font-bold mb-32 mt-20 max-w-[800px]"
    >
