<div class="lg:hidden w-full min-h-screen flex flex-col px-4">
  <h1 class="text-2xl sm:text-3xl px-4 text-center text-miyo-primary leading-relaxed mx-auto font-bold mb-8 mt-8 max-w-[800px]">
    Descubre cómo Miyo puede transformar tu manera de aprender
  </h1>

  <div class="relative flex-1 w-full min-h-[500px] flex items-center mt-4">
    <!-- Container para los elementos -->
    <div class="absolute inset-0 hidden md:block">
      <!-- Versión desktop -->
      <!-- Crecimiento Personal -->
      <div class="absolute top-[5%] left-[15%] transform -translate-x-1/2 flex flex-col items-center z-10 transition-all duration-300 hover:scale-110">
        <img class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover object-center"
          src="/FourthSection/person.webp"
          alt="Crecimiento Personal" />
        <p class="text-xs sm:text-sm text-center text-miyo-primary font-bold mt-2 max-w-[120px] sm:max-w-[150px]">
          Crecimiento Personal y Productividad
        </p>
      </div>

      <!-- Finanzas -->
      <div class="absolute top-[25%] right-[25%] transform translate-x-0 flex flex-col items-center z-10 transition-all duration-300 hover:scale-110">
        <img class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover object-center"
          src="/FourthSection/dolar.webp"
          alt="Finanzas Personales" />
        <p class="text-xs sm:text-sm text-center text-miyo-primary font-bold mt-2 max-w-[120px] sm:max-w-[150px]">
          Finanzas Personales e Inversiones
        </p>
      </div>

      <!-- Emprendimiento -->
      <div class="absolute top-[10%] right-[10%] transform translate-x-0 flex flex-col items-center z-20 transition-all duration-300 hover:scale-110">
        <img class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover object-center"
          src="/FourthSection/person2.jpg"
          alt="Emprendimiento" />
        <p class="text-xs sm:text-sm text-center text-miyo-primary font-bold mt-2 max-w-[120px] sm:max-w-[150px]">
          Emprendimiento
        </p>
      </div>

      <!-- Salud -->
      <div class="absolute bottom-[20%] left-[20%] transform -translate-x-1/2 flex flex-col items-center z-10 transition-all duration-300 hover:scale-110">
        <img class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover object-center"
          src="/FourthSection/salud.webp"
          alt="Salud y Bienestar" />
        <p class="text-xs sm:text-sm text-center text-miyo-primary font-bold mt-2 max-w-[120px] sm:max-w-[150px]">
          Salud y Bienestar
        </p>
      </div>

      <!-- Deportes -->
      <div class="absolute bottom-[15%] right-[15%] transform translate-x-0 flex flex-col items-center z-10 transition-all duration-300 hover:scale-110">
        <img class="w-16 h-16 sm:w-20 sm:h-20 rounded-full object-cover object-center"
          src="/FourthSection/ejercicio.webp"
          alt="Deportes" />
        <p class="text-xs sm:text-sm text-center text-miyo-primary font-bold mt-2 max-w-[120px] sm:max-w-[150px]">
          Deportes
        </p>
      </div>
    </div>

      

      <!-- Versión mobile (grid) -->
      <div class="md:hidden grid grid-cols-2 gap-6 w-full z-10">
        <!-- salud y Bienestar -->
        <div class="flex flex-col items-center order-1">
          <img
            class="w-16 h-16 rounded-full object-cover object-center"
            src="/FourthSection/salud.webp"
            alt="Salud y Bienestar"
          />
          <p
            class="text-xs text-center text-miyo-primary font-bold mt-2 max-w-[120px]"
          >
          Salud y Bienestar
          </p>
        </div>

        <!-- Crecimiento Personal -->
        <div class="flex flex-col items-center">
          <p
            class="text-xs text-center text-miyo-primary font-bold mt-2 max-w-[120px]"
          >
          Crecimiento Personal y Productividad
          </p>
          <img
            class="w-16 h-16 rounded-full object-cover object-center"
            src="/FourthSection/person.webp"
            alt="Crecimiento Personal"
          />
          
        </div>

        <!-- Emprendimiento -->
        <div class="flex flex-col items-center order-2">
          <img
            class="w-16 h-16 rounded-full object-cover object-center"
            src="/FourthSection/ejercicio.webp"
            alt="Ejercicio"
          />
          <p
            class="text-xs text-center text-miyo-primary font-bold mt-2 max-w-[120px]"
          >
            Ejercicio
          </p>
        </div>

        <!-- Salud -->
        <div class="flex flex-col items-center">
          <p
            class="text-xs text-center text-miyo-primary font-bold mt-2 max-w-[120px]"
          >
            Emprendimiento
          </p>
          <img
            class="w-16 h-16 rounded-full object-cover object-center"
            src="/FourthSection/person2.jpg"
            alt="Emprendimiento"
          />
        </div>

        <!--Finanzas -->
        <div class="flex flex-col items-center col-span-2 mx-auto">
          <p
            class="text-xs text-center text-miyo-primary font-bold mt-2 max-w-[120px]"
